{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "./api",
		"outDir": "./dist",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"@models/*": ["./api/server/src/models/*"]
		}
	},
	"include": [
		"api/**/*",
		"models/**/*.ts",
		"migrations/**/*.ts",
		"seeders/**/*.ts"
	],
	"exclude": ["node_modules", "dist"]
}
